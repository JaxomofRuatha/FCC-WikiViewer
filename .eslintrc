{
    "extends": "airbnb",
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "node": true,
        "mocha": true
    },
    "plugins": [
        "react",
        "import"
    ],
    "rules": {
        "max-len": [
            0,
            {
                "ignoreUrls": true
            }
        ],
        "react/jsx-filename-extension": [
            1,
            {
                "extensions": [
                    ".js",
                    ".jsx"
                ]
            }
        ],
        "comma-dangle": [
            "error",
            "only-multiline"
        ],
        "quote-props": [
            1,
            "consistent"
        ],
        "no-underscore-dangle": [
            0
        ],
        "no-plusplus": [0]
    }
}